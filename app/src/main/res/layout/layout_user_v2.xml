<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/layout_user_uesr_message" />

            <include layout="@layout/layout_user_login_message_v2" />

            <TextView
                android:id="@+id/user_logoutBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/orange_box_yellow_background_btn"
                android:text="@string/logout_text"
                android:textColor="@color/whitle"
                android:textSize="@dimen/text_size_18" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>