<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <LinearLayout
        android:id="@+id/rebate_item_imgBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp">

        <ImageView
            android:id="@+id/rebate_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/rebate_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rebate_item_imgBox"
        android:layout_toRightOf="@id/rebate_item_imgBox"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17" />

    <TextView
        android:id="@+id/rebate_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rebate_item_imgBox"
        android:layout_toRightOf="@id/rebate_item_imgBox"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/text_gray_01"
        android:textSize="@dimen/text_size_12" />

    <TextView
        android:id="@+id/rebate_item_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rebate_item_time"
        android:layout_below="@id/rebate_item_title"
        android:layout_toRightOf="@id/rebate_item_imgBox"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/text_gray_01"
        android:textSize="@dimen/text_size_14" />

</RelativeLayout>