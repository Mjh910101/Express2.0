<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:background="@color/whitle"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <LinearLayout
            android:id="@+id/main_tap_mainBox"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_tap_mainIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:src="@drawable/main_tap_off_main_icon" />

            <TextView
                android:id="@+id/main_tap_mainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tap_rebateBox"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_tap_rebateIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:src="@drawable/main_tap_off_rebate_icon" />

            <TextView
                android:id="@+id/main_tap_rebateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rebate_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/main_tap_scanningIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:src="@drawable/main_tap_scanning_icon" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main_tap_shoppingCarBox"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_tap_shoppingCarIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:src="@drawable/main_tap_off_shoppingcar_icon" />

            <TextView
                android:id="@+id/main_tap_shoppingCarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shopping_car_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tap_userBox"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_tap_userIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:src="@drawable/main_tap_off_user_icon" />

            <TextView
                android:id="@+id/main_tap_userText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>