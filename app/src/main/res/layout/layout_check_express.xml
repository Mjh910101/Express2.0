<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@color/whitle"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/checkExpress_imgBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/checkExpress_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_icon" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/checkExpress_imgBox"
            android:orientation="vertical">

            <TextView
                android:id="@+id/checkExpress_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="code"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/checkExpress_companyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/pandle_icon"
                android:text="添加备注"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitle"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="物流跟踪"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray" />

        <com.express.subao.views.InsideListView
            android:id="@+id/checkExpress_dataList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@color/whitle"
            android:dividerHeight="0dp" />

    </LinearLayout>


</LinearLayout>