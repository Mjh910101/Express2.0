<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitle"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sCar_item_choice"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:src="@drawable/choice_off_icon" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">

            <ImageView
                android:id="@+id/sCar_item_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_icon" />

            <TextView
                android:id="@+id/sCar_item_noStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/sCar_item_image"
                android:layout_alignLeft="@id/sCar_item_image"
                android:layout_alignRight="@id/sCar_item_image"
                android:background="@color/black_lucency"
                android:gravity="center"
                android:text="卖完了"
                android:textColor="@color/whitle"
                android:textSize="@dimen/text_size_19" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sCar_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17" />

            <TextView
                android:id="@+id/sCar_item_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="sum"
                android:textColor="@color/text_gray_01"
                android:textSize="@dimen/text_size_17" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/sCar_item_toolLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sCar_item_sub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/btn_stype_01"
                        android:text="-"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_19" />

                    <TextView
                        android:id="@+id/sCar_item_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/text_stype_01"
                        android:text="9"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_19" />

                    <TextView
                        android:id="@+id/sCar_item_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_stype_01"
                        android:text="+"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_19" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sCar_item_messageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sCar_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="现价"
                        android:textColor="@color/text_orange"
                        android:textSize="@dimen/text_size_20" />

                    <TextView
                        android:id="@+id/sCar_item_sum"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="x1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sCar_item_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="5dp"
            android:src="@drawable/err_icon" />

        <TextView
            android:id="@+id/sCar_item_warnMessage"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="商品当前库存量为xx，请更改数量。"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

    <View
        android:id="@+id/sCar_item_aboveLine"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="32dp"
        android:background="@color/line_gray" />

</LinearLayout>