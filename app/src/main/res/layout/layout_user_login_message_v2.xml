<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:id="@+id/user_item_order"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitle"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/user_item_orderIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/user_order_icon" />

        <TextView
            android:id="@+id/user_item_orderText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/user_item_orderIcon"
            android:drawableRight="@drawable/text_right_icon"
            android:text="我的訂單"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:id="@+id/user_item_comments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitle"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/user_item_commentsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/user_comments_icon" />

        <TextView
            android:id="@+id/user_item_commentsText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/user_item_commentsIcon"
            android:drawableRight="@drawable/text_right_icon"
            android:text="我的評價"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="@color/line_gray" />


    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray" />

    <RelativeLayout
        android:id="@+id/user_item_push"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitle"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <ImageView
            android:id="@+id/user_item_pushIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/user_push_icon" />

        <TextView
            android:id="@+id/user_item_pushText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/user_item_pushIcon"
            android:text="@string/user_push_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17" />

        <RadioButton
            android:id="@+id/user_item_pushSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:button="@drawable/push_sype"
            android:clickable="false" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="@color/line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitle"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:id="@+id/user_item_help"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitle"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/user_item_helpIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/user_help_icon" />

            <TextView
                android:id="@+id/user_item_helpText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/user_item_helpIcon"
                android:drawableRight="@drawable/text_right_icon"
                android:text="@string/user_help_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="38dp"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:id="@+id/user_item_about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitle"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/user_item_aboutUsIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/user_about_us_icon" />

            <TextView
                android:id="@+id/user_item_aboutUs"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/user_item_aboutUsIcon"
                android:drawableRight="@drawable/text_right_icon"
                android:text="@string/user_about_us_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="38dp"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:id="@+id/user_item_inviteFriendsBox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitle"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/user_item_inviteFriendsIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/user_invite_friends_icon" />

            <TextView
                android:id="@+id/user_item_inviteFriendsText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/user_item_inviteFriendsIcon"
                android:drawableRight="@drawable/text_right_icon"
                android:text="@string/user_invite_friends_text"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray" />
    </LinearLayout>

</LinearLayout>